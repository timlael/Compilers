	echo " "

	read -rsp $'Press any key to continue the test sequence...\n' -n 1 key
	clear
	echo "Program text to be tested:"
	cat testfiles/good_with_expression_print.4280E01
	echo " "
	echo "Next test:"
	echo "Testing using \"comp testfiles/good_with_expression_print\" (Implicit file naming. This should succeed.)..."
	echo " "
	read -rsp $'Press any key to continue the test sequence...\n' -n 1 key
	clear
	comp testfiles/good_with_expression_print
	echo " "

	read -rsp $'Press any key to continue the test sequence...\n' -n 1 key
