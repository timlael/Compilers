invalid(){
	echo "Invalid choice. Exiting."
	exit
}

leave(){
	echo "You have chosen not to test. Exiting."
	exit
}

clear
echo "Running test sequence for P4..."
echo " "
while true
	do
	read -r -p "Would you like to test P4?" choice
	case "$choice" in
	n|N|no|No) leave;;
	y|Y|yes|Yes) testSequence;;
	*) invalid;;
	esac
done
